<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать к стенам города!"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Добрро пожаловать к стенам города! Передайте устройство игроку &quot; + adapter.players.get(0) + &quot;! А затем передавайте устройство по часовой стрелке, чтобы каждый игрок ознакомился со своей ролью!"
        android:textColor="#fff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="116dp"
        android:layout_height="67dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Готово"
        android:textColor="#fff" />

</LinearLayout>
